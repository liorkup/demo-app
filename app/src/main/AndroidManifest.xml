<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.demo.firebaseproject">

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.demo.firebaseproject.view.ProductActivity"
            android:parentActivityName="com.demo.firebaseproject.view.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.demo.firebaseproject.view.MainActivity" />
        </activity>
        <activity
            android:name="com.demo.firebaseproject.view.CartActivity"
            android:parentActivityName="com.demo.firebaseproject.view.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.demo.firebaseproject.view.MainActivity" />
        </activity>
        <activity android:name="com.demo.firebaseproject.view.PaidActivity" />
        <activity
            android:name="com.demo.firebaseproject.view.SectionActivity"
            android:parentActivityName="com.demo.firebaseproject.view.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.demo.firebaseproject.view.MainActivity" />
        </activity>
    </application>

</manifest>